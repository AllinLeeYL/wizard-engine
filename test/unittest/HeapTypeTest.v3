def test_canon_struct2(t: HeapTypeTester) {
	var cache = HeapTypeCache.new();
	var comp = HeapTypeComparator.new(cache);
	var heaptypes = Vector<HeapTypeDecl>.new();

	var s0 = StructDecl.new([]);
	var s1 = StructDecl.new([]);
	var s2 = StructDecl.new([StorageType.new(ValueType.Ref(true, HeapType.Struct(s1)), Packedness.UNPACKED, true)]);
	
	t.put_group(heaptypes, [s0]);
	comp.reset(heaptypes, 0, 1);
	comp.canon();
	t.t.asserti(1, cache.count);

	t.put_group(heaptypes, [s1, s2]);
	comp.reset(heaptypes, 1, 2);
	comp.canon();
	t.t.asserti(2, cache.count);
	t.t.asserteq(s0, heaptypes[1]);
	t.t.asserteq(s2, heaptypes[2]);

	var ft = s2.field_types[0];
	t.t.asserteq(Packedness.UNPACKED, ft.packing);
	t.t.asserteq(true, ft.mutable);
	t.t.asserteq(ValueType.Ref(true, HeapType.Struct(s0)), ft.valtype);
}

def test_canon_struct_rec1(t: HeapTypeTester) {
	var pre = StorageType.new(ValueType.I32, Packedness.UNPACKED, true);
	var s0 = StructDecl.new([pre]);
	var s1 = StructDecl.new([pre]);
	var s2 = StructDecl.new([pre]);
	
	s0.field_types[0] = StorageType.new(ValueType.Ref(false, HeapType.Struct(s0)), pre.packing, pre.mutable); // self-recursive
	s1.field_types[0] = StorageType.new(ValueType.Ref(false, HeapType.Struct(s2)), pre.packing, pre.mutable); // mutually-recursive
	s2.field_types[0] = StorageType.new(ValueType.Ref(false, HeapType.Struct(s1)), pre.packing, pre.mutable); // mutually-recursive

	t.test_group_cached([s0, s1, s2]);
}

