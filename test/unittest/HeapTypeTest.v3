def dupHeapTypeDecl(decl: HeapTypeDecl) -> HeapTypeDecl {
	match (decl) {
		x: SigDecl => return SigDecl.new(x.params, x.results);
		x: StructDecl => return StructDecl.new(x.field_types);
		x: ArrayDecl => return ArrayDecl.new(x.elem_types);
	}
	return null;
}
