// Centralizes all the trace flags, even some components that are optional.
component Trace {
	var binparse = false;
	var verify = false;
	var interpreter = false;
	var test = false;
	var spectest = false;

	def STDOUT = System.fileWriteK(1, _, _, _);
	def STDERR = System.fileWriteK(2, _, _, _);
}
